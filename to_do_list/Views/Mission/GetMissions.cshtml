@model IEnumerable<Mission>

<div class="container my-4">
    <div class="row">
        <div class="col-md-8">
            <h2>Your Tasks</h2>
        </div>
        <div class="col-md-4 text-right">
            <button class="btn btn-primary" onclick="location.href='@Url.Action("CreateMission", "Mission")'">Add New</button>
        </div>
    </div>
    @foreach (var mission in Model)
    {
        <div class="card my-3">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-9">
                        <h5 class="card-title">@mission.Name</h5>
                        <p class="card-text">@mission.Description</p>
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" value="@mission.Id.ToString()"/>

                            <label class="form-check-label" for="@mission.Id">
                                @if (mission.IsCompleted)
                                {
                                    <span>Completed</span>
                                }
                                else
                                {
                                    <span> Not Completed Yet </span>
                                }
                                <hr/>
                                <span class="deadline"> deadline : @mission.DeadLine</span>
                            </label>
                        </div>
                    </div>
                    <div class="col-md-3 text-right">
                        <button class="btn btn-primary mr-2" onclick="location.href='@Url.Action("UpdateMission", "Mission", new { id = mission.Id.ToString()})'">Update</button>
                        <button class="btn btn-danger" onclick="location.href='@Url.Action("DeleteMission", "Mission", new { id = mission.Id.ToString()})'">Remove</button>
                    </div>
                </div>
            </div>
        </div>
    }
    <div class="text-right">
        <button class="btn btn-success mr-2" type="button" onclick="markAsCompleted()">Mark as Completed</button>
        <button class="btn btn-warning" type="button" onclick="markAsNotCompleted()">Mark as Not Completed</button>
    </div>
</div>

<style>
    .deadline {
        font-size: 14px;
        margin-left: 10px;
        color: #6c757d;
    }
</style>