@model Mission

<div class="container d-flex justify-content-center align-items-center vh-100">
    <form id="account" method="post" asp-action="UpdateMission">
        <h1>update your task</h1>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="form-floating mb-3">
            <input asp-for="Name" class="form-control" aria-required="true" value = "@Model.Name"/>
            <label asp-for="Name" class="form-label">Name</label>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Description" class="form-control" aria-required="true" value="@Model.Description" />
            <label asp-for="Description" class="form-label">Description</label>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="DeadLine" type="datetime-local" class="form-control" value =  "@Model.DeadLine"/>
            <label asp-for="DeadLine" class="form-label">Deadline for task</label>
        </div>
        <div>
            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Submit</button>
        </div>
    </form>
</div>
